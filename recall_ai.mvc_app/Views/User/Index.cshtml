@model List<recall_ai.mvc_app.Models.User>

<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Details", new { id = user.UserId })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = user.UserId })">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@user.UserId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Create New User</a>

